
<div class="container mt-5" style="font-family: Verdana">
  <h2 style="font-family: Lucida Handwriting; text-align: center">Users</h2>
  <br><br>
  <div class="pagy-container">
    <div class="pagy-info">
      <%== pagy_info(@pagy) %>
    </div>

    <div class="pagy-nav">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
  <table class="table table-info table-striped table-hover">
    <thead>
    <tr  style="background-color: #e6f2ff">
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Creation Date</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>

        <td><%= button_to 'Destroy', user, method: :delete, form: { data: { turbo: true, turbo_confirm: 'Are you sure?' } }, class: "btn-delete-index"%></td>

      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="pagy-container">
    <div class="pagy-info">
    </div>

    <div class="pagy-nav">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
</div>
<br>
