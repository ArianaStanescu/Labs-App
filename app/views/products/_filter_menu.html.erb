<%= form_tag products_path, method: :get, class: 'form-inline', id: 'orders-form' do %>
    <%= label_tag :category_id, 'Category:' %>
    <%= select_tag :category_id, options_for_select(Category.all.pluck(:name, :id), params[:category_id]), prompt: 'All',  class: "form-control"%>

  <%= label_tag :metal, 'Metal:' %>
  <%= select_tag :metal, options_for_select(Product.distinct.pluck(:metal).sort, params[:metal]), prompt: 'All',  class: "form-control"%>

  <%= label_tag :metal, 'Sort by price:' %>
  <%= select_tag(:sort_order, options_for_select([['Low To High', 'asc'], ['High To Low', 'desc']], params[:sort_order]), prompt: '-', id: "sort-select",  class: "form-control") %>

  <%= label_tag :metal, 'Sort by stock:' %>
  <%= select_tag(:stock_order, options_for_select([['Asc', 'asc'], ['Desc', 'desc']], params[:stock_order]), prompt: '-', id: "stock-select",  class: "form-control") %>

  <%= text_field_tag :search, params[:search], placeholder: 'Search item', style:"width:120px" ,  class: "form-control"%>

  <%= submit_tag 'Filter', class: 'btn btn-primary mb-2' %>

<% end %>