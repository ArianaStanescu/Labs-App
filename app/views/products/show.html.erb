<div class="card" style="width: 30rem; font-family: Verdana; margin: 0 auto; background-color: #e6f2ff">

  <%= image_tag @product.product_image + ".jpg", style:"width: 30rem" %>

  <div class="card-body" style="text-align: center; align-items: center">
    <h5 class="card-title" style="font-size: large"><%= @product.name %></h5>
    <p class="card-text"><%= @product.description %></p>
    <p class="card-text">Metal: <%= @product.metal %> </p>
    <p class="card-text"> Size: <%= @product.size %> </p>
    <p class="card-text">Price: <%= @product.price %> | Stock: <%= @product.stock %></p>

    <% if current_user.present? %>
      <%= link_to 'Back', products_path, class: "btn btn-primary" %>
    <%end %>
    <% if current_user.present? %>
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
    <%end %>

    <% if current_user.present? == blank? %>
      <%= link_to 'Back', all_products_path, class: "btn btn-primary" %>
    <%end %>
    <% if current_user.present? == blank? %>
      <%= link_to 'Add To Cart', all_products_path, class: "btn btn-primary" %>
    <%end %>
    <%#= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
    <br>
  </div>
  <br>
</div>
<br>



