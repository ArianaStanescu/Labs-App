
<%#= link_to "New credit card", new_credit_card_path %>

<div class="container mt-5" style="font-family: Verdana">
  <h1 style="font-family: Lucida Handwriting; text-align: center">Credit cards</h1>
  <%= link_to "New credit card", new_credit_card_path, style:"font-size: large" %>
  <br><br>

  <table class="table table-info table-striped table-hover table-sm">
    <thead>
    <tr style="background-color: #e6f2ff">
      <th scope="col">Name</th>
      <th scope="col">Number</th>
      <th scope="col">CVV</th>
      <th scope="col">Expiry Date</th>
<!--      <th scope="col">User ID</th>-->
      <th scope="col">Action</th>

    </tr>
    </thead>
    <tbody>
    <% @credit_cards.each do |credit_card| %>
      <%# if (@user.id == credit_card.user_id) %>
        <tr>
          <td><%= credit_card.name %></td>
          <td><%= '**** **** **** ' + credit_card.number[-4..-1] %></td>
          <td><%= credit_card.cvv %></td>
          <td><%= credit_card.expiry_date %></td>
          <td><%= link_to 'Show', credit_card %> | <%= link_to 'Edit', edit_credit_card_path(credit_card) %> |
            <%= button_to 'Destroy', credit_card, method: :delete, form:
              { data: { turbo: true, turbo_confirm: 'Are you sure?' } }, class: "btn-delete-index" %></td>
        </tr>
      <%# end %>
    <%end %>

    </tbody>
  </table>


</div>