<%= form_for(@credit_card) do |f| %>
<div class="padding">
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-header">
          <strong>Credit Card</strong>
          <small>enter your card details</small>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <label for="ccnumber">Credit Card Number</label>
                <div class="input-group">
                  <%= f.text_field :number, autofocus: true, required: true, class: "form-control", placeholder: "0000 0000 0000 0000"%>
                  <div class="input-group-append">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <label for="ccnumber">Expiry Date</label>
                <div class="input-group">
                  <%= f.date_field :expiry_date, autofocus: true, required: true, class: "form-control", placeholder: "expiry_date" %>
                  <div class="input-group-append">
                  </div>
                </div>
              </div>
            </div>
        </div>
          <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="card-footer">
          <%= f.submit button_text, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>