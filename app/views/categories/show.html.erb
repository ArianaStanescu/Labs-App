<div class="card" style="width: 20rem; align-items: center; margin: 0 auto; background-color: #e6f2ff">
  <% case @category.name
     when "Rings" %>
    <%= image_tag "ring.jpg", style: "width: 20rem;", class: "custom" %>
  <% when "Earrings" %>
    <%= image_tag "earrings.jpg", style:"width: 20rem" %>
  <% when "Bracelets" %>
    <%= image_tag "bracelet.jpg", style:"width: 20rem" %>
  <% when "Necklaces" %>
    <%= image_tag "necklace.jpg", style:"width: 20rem" %>
  <% when "Pendant" %>
    <%= image_tag "pendant.jpg", style:"width: 20rem" %>
  <% end %>
  <div class="card-body" style="text-align: center; align-items: center">
    <h5 class="card-title" style="font-size: large"><%= @category.name %></h5>
    <p class="card-text"><%= @category.description %></p>
    <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-primary" %>
    <%= link_to 'Back', categories_path, class: "btn btn-primary" %>
  </div>
  <br>

</div>

