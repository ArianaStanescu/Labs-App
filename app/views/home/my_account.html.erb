<div class="main_sign_up" >
  <div class="text-center text-lg-start mt-4 pt-2">
      <br>
      <br>
    <h1 style="font-family: Lucida Handwriting; text-align: center">My account</h1>
    <div class="container" style="max-width: 400px;margin: 0 auto;">
      <div class="user-info-container">
        <div class="user-info-box">
          <p><strong>Name:</strong> <%= @user.name %></p>
          <p><strong>Phone:</strong> <%= @user.phone %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
        </div>
      </div>
    </div>

    <% @credit_cards.each do |card| %>
      <p>Credit Card Number: <%= card.number %></p>
      <p>Expiry Date: <%= card.expiry_date %></p>
      <br>
      <%#= render partial: "credit_cards/show", collection: @credit_cards %>
    <% end %>

    <%= link_to 'Add New Card', new_credit_card_path, class: "btn btn-primary" %>
    <%= link_to 'View My Cards', user_credit_cards_path(current_user), class: "btn btn-primary" %>
    <br><br>
    <div>
      <%= link_to 'Edit Account', edit_user_registration_path, class: "btn btn-primary" %>
    </div>


  </div>
</div>
<br>