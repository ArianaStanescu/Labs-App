<%#= link_to "New address", new_address_path %>
<div class="container mt-5" style="font-family: Verdana">
  <h1 style="font-family: Lucida Handwriting; text-align: center">Addresses</h1>
  <%#= link_to "New credit card", new_credit_card_path, style:"font-size: large" %>
  <br><br>

  <table class="table table-info table-striped table-hover table-sm">
    <thead>
    <tr style="background-color: #e6f2ff">
      <th scope="col">User ID</th>
      <th scope="col">Country</th>
      <th scope="col">City</th>
      <th scope="col">Street</th>
      <th scope="col">ZIP</th>
      <th scope="col">Type</th>
      <th scope="col">Action</th>

    </tr>
    </thead>
    <tbody>
    <% @addresses.each do |address| %>
      <%# if (@user.id == credit_card.user_id) %>
      <tr>
        <td><%= address.user_id %></td>
        <td><%= address.country %></td>
        <td><%= address.city %></td>
        <td><%= address.street %></td>
        <td><%= address.zip %></td>
        <td><%= address.address_type %></td>
        <td><%= link_to 'Show', address %> | <%= link_to 'Edit', edit_address_path(address) %> |
          <%= button_to 'Destroy', address, method: :delete, form:
            { data: { turbo: true, turbo_confirm: 'Are you sure?' } } %></td>
      </tr>
      <%# end %>
    <%end %>

    </tbody>
  </table>


</div>